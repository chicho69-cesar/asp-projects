@model IEnumerable<FirebaseEmployee>

@{
    ViewData["Title"] = "Empleados";
}

<div class="card">
    <div class="card-header">
        <h2 class="text-center">Empleados</h2>
    </div>

    <div class="card-body">
        <a class="btn btn-warning col-6 offset-3 mb-3" asp-action="Create" asp-controller="Employees">
            Agregar empleado
        </a>

        <hr/>

        <table class="table table-striped table-bordered text-center">
            <thead class="table-dark text-white">
                <tr>
                    <th>Nombre</th>
                    <th>Telefono</th>
                    <th>Imagen</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var employee in Model) {
                    <tr class="table-light">
                        <td>@employee.Name</td>
                        <td>@employee.Phone</td>
                        <td>
                            <img src="@employee.URLImage" class="employee-img"/>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .employee-img {
        width: 120px;
        height: 120px;
        border: none;
        border-radius: 50%;
        object-fit: cover;
        object-position: center;
    }
</style>